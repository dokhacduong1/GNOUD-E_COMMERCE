            li(class="process_bar  basis-1/4")
                div(class="flex flex-col justify-center items-center")
                    span(class="") ショッピング
                    span(class="") カート
            li(class="process_bar active  basis-1/4 ")
                div(class="flex flex-col justify-center items-center")
                    span(class="") ご注文
                    span(class="") 手続き
            li(class="process_bar basis-1/4")
                div(class="flex flex-col justify-center items-center")
                    span(class="") ご注文内容
                    span(class="") 確認
            li(class="process_bar basis-1/4")
                div(class="flex flex-col justify-center items-center")
                    span(class="") ご注文
                    span(class="") 完了